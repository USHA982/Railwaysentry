<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Railway Sentry - Worker Detection</title>
</head>
<body>
  <h2>Upload Image to Detect Workers on Tracks</h2>
  <form id="uploadForm" enctype="multipart/form-data">
    <input type="file" name="image" accept="image/*" required />
    <button type="submit">Detect</button>
  </form>

  <h3>Result:</h3>
  <img id="outputImage" src="" alt="Detection Result" width="600"/>

  <script>
    document.getElementById("uploadForm").onsubmit = async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);

      const response = await fetch("/detect", {
        method: "POST",
        body: formData
      });

      const data = await response.json();
      document.getElementById("outputImage").src = data.output_url + "?" + new Date().getTime();  // Prevent caching
    };
  </script>
</body>
</html>